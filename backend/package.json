    "pino-pretty": "^11.0.0",
    "qrcode": "^1.5.4",
    "redis": "^4.6.13",
    "sequelize": "^6.37.7",
    "sharp": "^0.33.3",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
